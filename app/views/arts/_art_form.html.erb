<div class="shadow rounded mt-3 mb-4 col" data-aos="flip-left" style="background-color: #fff;">
	<div class="p-4 mt-4">
		<%= simple_form_for(@art) do |f|  %>
		<%= f.input :name, placeholder: "Name", label: false %>
		<%= f.input :artist, placeholder: "Artist", label: false %>
		<%= f.input :price, placeholder: "Price", label: false %>
		<%= f.input :rate, placeholder: "Daily rate", label: false, prepend: 'Â£' %>
		<%= f.input :owner, placeholder: "Owner of this Art", label: false %>
		<%= f.input :address, placeholder: "Address of this Art", label: false %>
		<%= f.input :style, placeholder: "Style", collection: Art::STYLES %>
		<%= f.input :photo, as: :file, label: false %>
		<%= f.submit "Submit", class:"btn btn-outline-success"%>
		<% end %>
	</div>
</div>
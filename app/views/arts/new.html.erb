<div class="navbar navbar-expand-lg navbar-light navbar-lewagon border-bottom d-flex justify-content-center">
    <div class="text-secondary">
        <%= image_tag 'Virgo.png', class: "logo" %>
    </div>
</div>

<div class="container d-flex justify-content-center full-page">
	<div class=" col-6" style="margin-top: 120px;">
	<h2>Upload New Art</h2>
		<div class="art-form mt-3">
			<%= simple_form_for(@art) do |f|  %>
			<%= f.input :name, placeholder: "Name", label: false %>
			<%= f.input :artist, placeholder: "Artist", label: false %>
			<%= f.input :price, placeholder: "Price", label: false %>
			<%= f.input :photo, as: :file, label: false %>
			<%= f.submit class:"btn", style: "background-color: #5bc0be" %>
			<%= link_to "Back", root_path, class: "btn btn-info" %>
			<% end %>
		</div>
	</div>
</div>
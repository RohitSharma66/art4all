<div class="navbar navbar-expand-lg navbar-light navbar-lewagon border-bottom ">
  <div class="text-secondary">
      <%= link_to root_path do  %>
        <%= image_tag 'logo.png', class: "logo ml-1" %>
      <% end %>
  </div>

  <div class="ml-5">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
          <li class="nav-item">
            <a href="#main" class="nav-link active mr-1" id="home-button">Home</a>
          </li>
          <li class="nav-item">
            <a href="#about-section" class= "nav-link mr-1">About</a>
          </li>
          <li class="nav-item">
            <%= link_to 'Explore', arts_path, class: 'nav-link' %>
          </li>
          
        <% else %>
          <li class="nav-item">
            <a href="#main" class="nav-link active mr-1" id="home-button">Home</a>
          </li>
          <li class="nav-item">
            <a href="#about-section" class= "nav-link mr-1">About</a>
          </li>
          <li class="nav-item">
            <%= link_to 'Explore', arts_path, class: 'nav-link' %>
          </li>
      <% end %>
    </ul>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>       
        <form class="form-inline my-lg-0 mr-3">
          <% if @query.present? %>
            <input name="query" class="form-control mr-sm-2" value=" <%= params[:query] %>" type="search" placeholder= "Search" aria-label="Search">
          <% else %>
            <input name="query" class="form-control mr-sm-2"  type="search" aria-label="Search" placeholder="Search by artist or title...">
          <% end %>
          <button class="btn my-2 my-sm-0 btn-outline-secondary" type="submit">Search</button>
        </form>

        <li class="nav-item dropdown active">
          <%= image_tag "avatar.png", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right">
            <!-- < %= link_to "View Bookings", bookings_path, class: "dropdown-item"  %> -->
            <% if user_signed_in? %>
            <h5 class="ml-4" style="color: #5bc0be"><i> Hello <%= current_user.first_name %></i></h5>
            <% end %>
            <%= link_to "Upload Art", new_art_path, class: "dropdown-item links" %>
            <%= link_to "All Bookings", bookings_path, class: "dropdown-item links" %>
            <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item links" %>
            <%= link_to "SignOut", destroy_user_session_path, method: :delete, class: "dropdown-item links"  %>
          </div>   
        </li>
      <% else %>
        <li class="nav-item">
          <!-- <a class="dropdown-toggle nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"></a> -->
          <div class="d-flex p-3">
          <%= link_to "Login", new_user_session_path, class: "btn btn-outline mr-2 text-dark border bg-light" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-outline text-dark border bg-light" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>


    



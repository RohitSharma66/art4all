<div class="navbar navbar-expand-lg navbar-light navbar-lewagon border-bottom d-flex justify-content-between">
    <div>
       <%= link_to root_path do  %>
        <%= image_tag 'logo.png', class: "logo ml-1" %>
        <% end %>
    </div>
    <div>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn rounded text-white mr-4 nav-button"%>
    </div>
</div>


<div style="background-color: #f4f3ee;">
  <div class="container justify-content-center full-page rounded p-5" style="margin-top: 100px">
    <div class="d-flex justify-content-between">

       <div class="col-sm-6 mt-5 p-4">
          <h1 class="" style="color: rgba(0, 0, 0, 0.5);">Sell or Rent Your Arts With Us</h1>
          <h3 class="" style="color: rgba(0, 0, 0, 0.5);">Sign In To Art Studio</span></h3>
          <!-- <h5 class="text-dark">Submit Your Art For Review By Our Curators</h5> -->
          <!-- <div class="d-flex mt-5"> -->
          <!-- < %= image_tag 'login4.jpeg', width:220, height:220 %> -->
          <!-- < %= image_tag 'login1.jpeg', width:220, height:220 %> -->
        </div>


      <div class="shadow rounded col-sm-6" data-aos="flip-left" style="background-color: #fff; height: 420px;"> 
        <div class="p-4 mt-3">
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email" } %>
                <%= f.input :password,
                            required: false,
                            input_html: { autocomplete: "current-password" } %>
                <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>

              <div class="form-actions mt-2 mb-2">
                <%= f.button :submit, "Sign in", class: "btn btn-outline-success" %>
                <%= link_to 'Cancel', root_path, class: "btn btn-outline-dark border" %>
              </div>
            <% end %>
            <!-- < %= render "devise/shared/links" %> -->
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          </div>   
        </div>
        <!-- <h2 class="text-center">Log in</h2> -->


    </div>
  </div>
</div>



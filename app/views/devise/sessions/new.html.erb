<div class="navbar navbar-expand-lg navbar-light navbar-lewagon border-bottom d-flex justify-content-between">
    <div>
        <%= image_tag 'logo.png', class: "logo ml-1" %>
    </div>
    <div>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn rounded text-white mr-4 nav-button"%>
    </div>
</div>

<div class="container" style="margin-top: 112px">
  <div class="d-flex justify-content-center full-page">
    <div class="col-sm-6 mt-3 p-4" style="background-color: #f3f3f4"> 
      <h2 class="text-center">Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs mt-3">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mt-2 mb-2">
          <%= f.button :submit, "Log in", class: "btn btn-primary mr-2" %>
          <%= link_to 'Cancel', root_path, class: "btn btn-info" %>
        </div>
      <% end %>
      <!-- < %= render "devise/shared/links" %> -->
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
  </div>
</div>



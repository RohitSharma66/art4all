<div class="navbar navbar-expand-lg navbar-light navbar-lewagon border-bottom">
    <div class="text-secondary ml-3">
        <%= image_tag 'Virgo.png', class: "logo" %>
    </div>
</div>

<div class="container full-page">
  <div class="d-flex justify-content-center full-page mt-5">
    <div class="col-6 mt-5 "> 
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs mt-1">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions mb-2">
          <%= f.button :submit, "Log in", class: "btn submit-btn" %>
          <%= link_to 'Cancel', root_path, class: "btn btn-info" %>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>


